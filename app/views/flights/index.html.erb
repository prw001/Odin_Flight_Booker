<title>Find Flights</title>

<h2>Book Flights</h2>

<div id="search_form_container">
	<%= render partial: 'flights/search_form' %>
</div>

<div id="table_container">
	<% if @flights %>
		<%= render partial: 'flights/flights_table' %>
	<% else %>
		No flights match your search query. Try a different search.
	<% end %>
</div>
<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>